<% form_for [@employee,@arrear] do |f| %>
  <%= display_error_messages('arrear') %>
  <ul class="form">
    <%= f.text_field(t('common.description'), :description) %>
    <%= f.text_field(t('common.amount'), :amount) %>
    <%= f.text_field(t('common.date'), :arrear_at, :class => 'datebalks') %>
  </ul>
  <p class="submit"><%= f.submit t('button.save'), :class => 'btn' %> <%= "#{t('common.or')}" %>
    <%= link_to(t('button.cancel'), employee_arrears_path(@employee)) %></p>
<% end %>
