<%= render :partial=>'companies/page_header' %>
<% unless @company_bonuses.blank? %>
  <table cellpadding="0" cellspacing="0" width="100%" class="list">
    <thead>
      <tr>
        <th><%= t('bonus.release_date') %></th>
        <th class="numeric"><%= t('bonus.percent') %></th>
      </tr>
    </thead>
    <tbody>
      <% @company_bonuses.each do |bonus_setting| %>
        <tr class="<%= cycle("",:alt) %>">
          <td class="head1"><%= bonus_setting.formatted_release_date %></td>
          <td class="numeric head2"><%= "#{bonus_setting.bonus_percent}%" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<%= form_for(@company_bonus, :url => bonus_path) do |f| %>
  <ul class="form">
    <%= f.text_field t('bonus.percent'), :bonus_percent %>
    <%= f.text_field t('bonus.release_date'), :release_date, :class => 'datebalks' %>
  </ul>
  <p class="submit">
    <%= f.submit t('button.save'), :class => 'btn' %>
    <%= link_to(t('button.cancel'),bonus_path, :class=>'cancel') %>
  </p>
<% end %>