<%= render :partial=>'companies/page_header' %>
<%= form_for(@company_grade) do |f| %>
  <%#= display_error_messages('company_grade') %>
    <% if @company_grade.errors.any? %>
        <div id="error_explanation" class="errors">
          <h2><%= pluralize(@company_grade.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
            <% @company_grade.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
  <ul class="form">
      <%= f.label(:name, :class=>'main') %>
      <%= f.text_field("#{t('company_grade.grade')}", :name) %>
  </ul>
  <ul class="form">
      <%= f.label(:pay_scale, :class=>'main') %>
