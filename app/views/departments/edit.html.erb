<%= render :partial=>'companies/page_header' %>
<%= form_for(@department) do |f| %>
  <%#= display_error_messages('department') %>
    <% if @department.errors.any? %>
        <div id="error_explanation" class="errors">
          <h2><%= pluralize(@department.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
            <% @department.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
  <ul class="form">
    <%= f.label(:name, :class=>'main') %>
    <%= f.text_field(:name) %>
  </ul>
  <p class="submit">
    <%= f.submit t('button.save'), :class=>'btn' %> <%= "#{t('common.or')}" %>
    <%= link_to(t('button.cancel'), departments_path,:class => 'cancel') %>
  </p>
<% end %>
