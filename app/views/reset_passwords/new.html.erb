<% content_for(:page_header) do %>
  <h2>Forgot Password</h2>
<% end %>
<p>Fill out the form below and instructions to reset your password will be emailed to you:</p>
<dl class="form">
  <% form_tag reset_passwords_path do %>
    <dt>Email Address</dt>
    <dd><%= text_field_tag "email",'', :size => 40,:wrap => {:class => ""} %></dd>
  </dl>
  <p><%= submit_tag "Reset my password",:class => "btn" %></p>
<% end %>